{
  "name": "rick-morty-pwa-workbox-webpack",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run sass && webpack --mode development",
    "clean:sass": "rm -rf ./src/css/*",
    "lighthouse": "npx lighthouse http://localhost:1981/ --view --chrome-flags=\"--headless\" --output-path=./lighthouse/lighthouse_\"$(date \"+%Y-%m-%d_%H-%M-%S\")\".report.html",
    "sass": "npm run clean:sass && npx sass src/scss:src/css --style compressed --no-source-map",
    "start": "npx serve -l 1981 dist"
  },
  "license": "ISC",
  "devDependencies": {
    "acorn": ">=6.4.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "lighthouse": "^5.6.0",
    "minimist": ">=0.2.1",
    "sass": "^1.25.0",
    "serve": "^11.3.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.12",
    "workbox-webpack-plugin": "^5.1.2"
  },
  "dependencies": {
    "animate.css": "^3.7.2",
    "rickmortyapi": "^0.2.1"
  }
}
